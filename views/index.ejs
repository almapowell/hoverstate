<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>MY APP</title>
  </head>
  <body>
    <h1>Add a student!</h1>
    <form action="/student" method="POST">
      <input type="text" placeholder="name" name="name" />
      <input type="text" placeholder="email" name="email" />
      <button type="submit">Submit</button>
    </form>

    <h2>List of Students</h2>
    <input id="filterInput" />
    <ul>
      <% student.map(s => { %>
      <li>
        <span id="student-name"><%= s.name %></span>:
        <span><%= s.email %></span>
        <button id="delete-button">Delete Student</button>
      </li>
      <% }) %>
    </ul>
  </body>
  <script src="/main.js"></script>
</html>
